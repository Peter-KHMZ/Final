        <div class="col-md-8">
            <form action="/add" id="form2" method="POST">
                <div class="input-group mb3">
                    <input type="text" class="form-control" name="houseID" placeholder="House ID..." required>
                       <select name="houseControl" id="" class="custom-select mb3" required>
                            <option value="" selected>House Control</option>
                            <option value="Partial Control">Partial Control</option>
                            <option value="Full Control">Full Control</option>
                       </select>
                </div>
                <br>
                <div class="form-group">
                    <textarea name="houseAddress" id="" placeholder="House's Address" rows="2" class="form-control"></textarea>
                </div>
                <br>
                <div class="input-group mb3">
                    <input type="text" class="form-control" name="ownerFN" placeholder="Owner's First Name">
                    <input type="text" class="form-control" name="ownerLN" placeholder="Owner's Last  Name">
                </div>
                <br>
                <div class="input-group mb3">
                    <input type="text" class="form-control" name="ownerTel" placeholder="Owner's Telephone">
